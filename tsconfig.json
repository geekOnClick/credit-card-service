{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "components/*": ["components/*"],
            "features/*": ["features/*"],
            "pages/*": ["pages/*"],
            "types/*": ["types/*"],
            "lib/*": ["assets/lib/*"],
            "img/*": ["assets/img/*"],
            "config": ["_config"],
            "api": ["api"]
        }
    },
    "include": ["src", "src/components/common/FooterContacts/index.tsx"],
    "exclude": ["lib/**"]
}
